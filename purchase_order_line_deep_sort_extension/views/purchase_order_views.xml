<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="purchase_order_form">
        <field name="model">purchase.order</field>
        <field
            name="inherit_id"
            ref="purchase_order_line_deep_sort.purchase_order_form"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//group[@name='line_order']//field[@name='line_order']"
                position="attributes"
            >
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath
                expr="//group[@name='line_order']//field[@name='line_direction']"
                position="attributes"
            >
                <attribute name="attrs">
                    {'required': ['|', ('line_order', '!=', False), ('line_order_2', '!=', False)]}
                </attribute>
            </xpath>
            <xpath
                expr="//group[@name='line_order']//field[@name='line_order']"
                position="after"
            >
                <b>Parameter 1:</b>
                <field name="line_order" options="{'no_create': True}" />
                <br />
                <b>Parameter 2:</b>
                <field name="line_order_2" options="{'no_create': True}" />
                <br />
                <b>Order:</b>
            </xpath>
        </field>
    </record>
</odoo>
