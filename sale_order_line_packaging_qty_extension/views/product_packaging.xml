<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_packaging_form_view" model="ir.ui.view">
        <field name="name">product.packaging.form.view.inherit</field>
        <field name="model">product.packaging</field>
        <field name="inherit_id" ref="product.product_packaging_form_view" />
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <field name="product_uom_id" position="replace" />
            <xpath expr="//sheet/group" position="inside">
                <group id="sale_group" string="Sale" groups="uom.group_uom">
                    <field name="product_uom_id" position="move" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
