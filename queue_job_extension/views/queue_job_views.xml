<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="ametras_view_queue_job_form">
        <field name="name">queue.job.form</field>
        <field name="model">queue.job</field>
        <field name="inherit_id" ref="queue_job.view_queue_job_form" />
        <field name="arch" type="xml">
           <xpath expr="//field[@name='eta']" position="after">
                <field
                    name="parent_uuids"
                    readonly="1"
                    help="Holds the parent job uuids, current job will start execution only after the completion of these jobs"
                />
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="ametras_view_queue_job_tree">
        <field name="name">queue.job.tree</field>
        <field name="model">queue.job</field>
        <field name="inherit_id" ref="queue_job.view_queue_job_tree" />
        <field name="arch" type="xml">
           <xpath expr="//field[@name='date_created']" position="after">
               <field name="priority" />
           </xpath>
            <xpath expr="//field[@name='eta']" position="after">
                <field name="parent_uuids" readonly="1" />
            </xpath>
        </field>
    </record>
</odoo>
